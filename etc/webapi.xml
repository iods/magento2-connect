<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route method="GET" url="/V1/products/get-parent-by-id/:id">
        <service class="Iods\Connect\Api\ConfigurableManagementInterface"
                 method="getParentByChildId"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/V1/products/get-parent-by-sku/:sku">
        <service class="Iods\Connect\Api\ConfigurableManagementInterface"
                 method="getParentByChildSku"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>